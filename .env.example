# Node environment - Set your Node environment ('development', 'production', etc.)
# Default: 'development'
NODE_ENV=development

# Server Configuration - Port for the server to listen on.
# Default: 5000
PORT=5000

# JWT Authentication - Provide your JWT secret and token expiry time.
JWT_SECRET=your_jwt_secret_here
JWT_TOKEN_EXPIRIES=your_jwt_token_expiry_here

# MongoDB Configuration - Provide your MongoDB Atlas URI.
MONGODB_URI=your_mongodb_atlas_uri_here

# Front-end Configuration - Provide the host URL of your front-end application.
CLIENT_HOST=your_client_host_url_here

# Email Configuration - SMTP host and port. Provide your email credentials.
# Defaults: EMAIL_HOST = 'smtp.example.com', EMAIL_PORT = 587
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_username_here
EMAIL_PASSWORD=your_email_password_here

{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "plugins": [
    "jest",
    "prettier"
  ],
  "env": {
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": "error",
    "comma-dangle": "error",
    "prettier/prettier": ["error", {
      "semi": true,
      "tabWidth": 2,
      "printWidth": 100,
      "singleQuote": true,
      "trailingComma": "none",
      "jsxSingleQuote": true,
      "bracketSpacing": true
    }]
  }
}
